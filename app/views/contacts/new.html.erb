<center><h1>Обратная связь </h1></center>

<%= form_for @contact do |f| %>

<form class="form-horizontal">


   
  <div class="form-group form-group-lg">
  
    <%= f.label "Имя",class: "col-sm-10 control-label" %> 
   
  <div class="col-sm-10">
     <%= f.text_field :name, required: true, class: 'form-control' %> 
    </div>
    </div>

    <div class="form-group form-group-lg">
     
    <%= f.label :Email,class: "col-sm-10 control-label" %>
      
    <div class="col-sm-10">
    <%= f.email_field :email, required: true, class: 'form-control' %>
    </div>
    </div>

  <div class="form-group form-group-lg">
  
    <%= f.label "Сообщение",class: "col-sm-10 control-label" %>
    <div class="col-sm-10 ">
    <%= f.text_area :message, as: :text, class: 'form-control' %>

    </div>
    </div>
    
    <%= f.submit "Отправить сообщение", class: 'col-sm-10  btn btn-primary' %>
   <% end %>
</form>

